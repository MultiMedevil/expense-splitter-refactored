{
  "name": "expense-splitter-refactored",
  "version": "2.0.0",
  "description": "Modular refactoring of Expense Splitter project with Vue 3 and modern tooling",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write ."
  },
  "dependencies": {
    "vue": "^3.4.0",
    "pinia": "^2.1.7",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "vitest": "^1.0.0",
    "@vue/test-utils": "^2.4.0",
    "jsdom": "^23.0.0",
    "eslint": "^8.0.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "prettier": "^3.0.0",
    "@rushstack/eslint-patch": "^1.3.3",
    "eslint-plugin-vue": "^9.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "vue",
    "expense-tracker",
    "split-bills",
    "group-expenses",
    "vue3",
    "pinia",
    "vite"
  ],
  "author": "Expense Splitter Team",
